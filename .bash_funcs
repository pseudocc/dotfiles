#!/usr/bin/env bash

nvim_dap() {
    if [ "$1" == "" ]; then
        return
    fi

    case "$1" in
        ("rust"|"c"|"python")
            cp "$HOME/.config/nvim/dap-conf/$1.lua" .nvim-dap.lua
            ;;
        ("cpp"|"cc")
            cp "$HOME/.config/nvim/dap-conf/c.lua" .nvim-dap.lua
            ;;
        (*)
            echo "unexpected $1"
            ;;
    esac
}
